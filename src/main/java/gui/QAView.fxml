<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>

<VBox fx:controller="gui.QAController" alignment="CENTER" spacing="20.0" style="-fx-padding: 40; -fx-background-color: #004b88;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="500" prefHeight="600">
    <Label text="QA Dashboard" style="-fx-font-size: 22; -fx-font-family: Helvetica; -fx-text-fill: white;" />
    <ImageView fx:id="qaLogo" fitWidth="150" preserveRatio="true" />
    <ListView fx:id="photoListView" prefWidth="400" prefHeight="300" />
    <Button text="Godkend billede" onAction="#onApproveButtonClick" style="-fx-pref-width: 200; -fx-background-color: #7fa8c5; -fx-text-fill: white;" />
    <Button text="Afvis billede" onAction="#onRejectButtonClick" style="-fx-pref-width: 200; -fx-background-color: #338d71; -fx-text-fill: white;" />
    <Button text="Generer rapport" onAction="#onGenerateReportClick" style="-fx-pref-width: 200; -fx-background-color: #004b88; -fx-text-fill: white;" />
</VBox>
