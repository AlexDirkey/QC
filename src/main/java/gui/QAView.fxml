<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="gui.QAController" alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #004b88;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="600">
    <Label text="QA View" style="-fx-font-size: 24; -fx-font-family: Helvetica; -fx-text-fill: white;" />

    <Label text="Under review ordrer" style="-fx-text-fill: white;" />
    <ListView fx:id="reviewOrdersList" prefHeight="150" prefWidth="400" />

    <Button text="Godkend ordre" onAction="#onApproveOrderClick" style="-fx-background-color: #7fa8c5; -fx-text-fill: white;" />
    <Button text="Afvis ordre" onAction="#onRejectOrderClick" style="-fx-background-color: #7fa8c5; -fx-text-fill: white;" />
    <Button text="Log ud" onAction="#onLogoutButtonClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: white;" />
</VBox>
