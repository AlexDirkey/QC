    <ListView fx:id="userListView" prefWidth="400" prefHeight="300" />
    <Button text="Tildel rolle" onAction="#onAssignRoleButtonClick" style="-fx-pref-width: 200; -fx-background-color: #7fa8c5; -fx-text-fill: white;" />
