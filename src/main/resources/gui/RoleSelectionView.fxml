<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="gui.RoleSelectionController"
      spacing="20" alignment="CENTER" styleClass="background"
      xmlns="http://javafx.com/javafx">

    <Label text="BelSign" styleClass="header-label" />

    <GridPane alignment="CENTER" hgap="30" vgap="10">
        <Button text="QA" onAction="#onQARoleSelected" styleClass="role-button"
                GridPane.rowIndex="0" GridPane.columnIndex="0" />

        <Button text="Operator" onAction="#onOperatorRoleSelected" styleClass="role-button"
                GridPane.rowIndex="0" GridPane.columnIndex="1" />
    </GridPane>

    <Pane fx:id="spacer" VBox.vgrow="ALWAYS" />

    <Button text="Admin" onAction="#onAdminRoleSelected" styleClass="admin-button" />
</VBox>