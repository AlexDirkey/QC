    <Button text="Se logs" onAction="#onViewLogsButtonClick" style="-fx-pref-width: 150; -fx-background-color: #7fa8c5; -fx-text-fill: white;" />
    <Button text="Administrer brugere" onAction="#onManageUsersButtonClick" style="-fx-pref-width: 150; -fx-background-color: #7fa8c5; -fx-text-fill: white;" />
